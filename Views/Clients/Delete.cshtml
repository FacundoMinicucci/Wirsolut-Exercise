@model WirsolutExercise.Core.DTOs.ClientsDTO
@{
    ViewData["Title"] = "Delete client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-sm-12 text-white font-weight-bold">
            <h3>Delete client</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Delete" class="text-white">

                <input type="hidden" asp-for="Id"/>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" readonly/>
                    <span asp-validation-for="FirstName" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" readonly/>
                    <span asp-validation-for="LastName" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DNI" class="control-label"></label>
                    <input asp-for="DNI" class="form-control" readonly/>
                    <span asp-validation-for="DNI" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CUIT" class="control-label"></label>
                    <input asp-for="CUIT" class="form-control" readonly/>
                    <span asp-validation-for="CUIT" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" readonly/>
                    <span asp-validation-for="Address" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" readonly/>
                    <span asp-validation-for="Location" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Delete client" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{

    @{ <partial name="_ValidationScriptsPartial" /> }
}

